<td>
  <span id="update_mail_msg">
    <% if @option.use_confirm_email? -%>
      <% if @reservation.camper.email? -%>
	<span class="noprint">
	  <%= button_to_function I18n.t('reservation.UpdateEmail'), remote_function(:url=>{:action => 'update_mail_msg', :controller => 'reservation', :reservation_id => @reservation.id}) %>
	</span>
      <% end -%>
    <% end -%>
  </span>
</td>
<% end %>
