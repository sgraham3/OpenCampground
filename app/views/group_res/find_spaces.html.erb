<table cellpadding="0" cellspacing="0"><tr valign="top">
<td>
  <%= I18n.t('group_res.NumberofSpacesSelected') %>: <span id="num_spaces"><%= @sp_array.size.to_s %></span>
  <%= button_to I18n.t('group_res.SelectionsDone'), :action => 'spaces_selected' %>
  <%= render :partial => 'shared/spaces' %>
  <%= will_paginate @spaces %>
</td>
<% if defined? @map %>
<td>
  <div id="map">
    <div id="container">
      <img src="<%= @map%>" />
    </div>
  </div>
</td>
<% end %>
</tr></table>
