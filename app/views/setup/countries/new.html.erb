<%= render :partial => 'setup/buttons' %>

<% form_for :country, :url => setup_countries_path do |f| %>

<%= f.error_messages %>

  <p><label for="country_name">Country name:</label>
  <%= f.text_field :name  %></p>
  <p><label for="country_active">Active?</label>
  <%= f.check_box :active  %></p>

<%= f.submit 'Create' %>
<% end %>
<%= set_focus_to_id 'country_name' %>
<%= link_to 'Cancel', setup_countries_path, :class => 'link_btn' %>
