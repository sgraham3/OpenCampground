<%= render :partial => 'setup/buttons' %>
<%= render :partial => 'explain' %>
<div>
<% form_for :paypal, :url => setup_paypals_path do |f| %>
  <p>
    <% if File.exists?(Paypal::Keyfile) %>
      <label>Replace keyfile?</label>
      <%= f.check_box :create_keyfile, {}, true, false %></b><br/>
    <% else %>
      <%= hidden_field_tag :create_keyfile, 'true' %>
    <% end %>
    <label><%= I18n.t('camper.Country') %> (2 letter ISO abbreviation):</label>
    <%= f.text_field :country, :size => 2 %></b><br/>
    <label><%= I18n.t('camper.State') %>:</label>
    <%= f.text_field :state %></b><br/>
    <label><%= I18n.t('camper.City') %>:</label>
    <%= f.text_field :city %></b><br/>
    <label>Campground name:</label>
    <%= f.text_field :name %></b><br/>
    <%= hidden_field_tag 'servername', request.server_name %>

    <%= f.submit I18n.t('helpers.submit.create', :model => 'Certificate') %>
  </p>
<% end %>
</div>
